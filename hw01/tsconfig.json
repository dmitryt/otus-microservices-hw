{
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "lib": [
      "es2018"
    ],
    "target": "es2018",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listEmittedFiles": true
  }
}